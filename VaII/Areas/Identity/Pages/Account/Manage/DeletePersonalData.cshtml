@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-center" style="padding: 10px">@ViewData["Title"] </h3>

<div class="alert alert-warning justify-content-center" role="alert" style="padding: 10px">
    <p class="text-center">
        <strong>Deleting this data will permanently remove your account, and cannot be recovered.</strong>
    </p>
</div>

<div class="container d-block border d-flex justify-content-center col-5" style="padding: 10px">
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-grouo mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password for confimnation."/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-m btn-danger" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
