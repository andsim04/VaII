@page
@model VaII.Pages.Posts.DetailsModel
@using System.Web.Helpers;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center">Details</h1>

<div class="container border d-flex justify-content-center" style="padding: 20px">
<div class="col-md-4">
    <div class="row">
        <dl class="container border text-center" style="padding: 10px">

            <dt >
                @Html.DisplayNameFor(model => model.Post.Title)
            </dt>
            <dd >
                @Html.DisplayFor(model => model.Post.Title)
            </dd>
            <dt >
                @Html.DisplayNameFor(model => model.Post.Description)
            </dt>
            <dd >
                @Html.DisplayFor(model => model.Post.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Post.Published)
                @Html.DisplayFor(model => model.Post.Published)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Post.Latest)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Post.Latest)
            </dd>
        </dl>
    </div>
        
    <div class="col-md-4">
            @{

                if (Model.Post.Content != null)
                {
                    WebImage photo = new WebImage(Model.Post.Content);
                    photo.Resize(400, 400, true, true);
                    var thumbnail = photo.GetBytes();


                    <img class="mx-auto d-block" src="data:image;base64,@System.Convert.ToBase64String(thumbnail)" />
                
                }
            }
    </div>
    </div>
</div>



<div class="text-center">
    <a asp-page="./Edit" asp-route-id="@Model.Post?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
