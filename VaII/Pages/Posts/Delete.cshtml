@page
@using System.Web.Helpers;
@model VaII.Pages.Posts.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div class="container border d-flex justify-content-center">
   
    
    <div class="row" style="padding: 10px">
        <h4 class="text-center">Post</h4>
        <dl class="container border text-center" style="padding: 10px">
       
            <dt>
                @Html.DisplayNameFor(model => model.Post.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Post.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Post.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Post.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Post.Published)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Post.Published)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Post.Latest)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Post.Latest)
            </dd>

        </dl>

        <div class="col-md-4 container d-flex justify-content-center" style="padding: 10px">
            @{

                if (Model.Post.Content != null)
                {
                    WebImage photo = new WebImage(Model.Post.Content);
                    photo.Resize(200, 200, true, true);
                    var thumbnail = photo.GetBytes();


                    <img class="m-auto" src="data:image;base64,@System.Convert.ToBase64String(thumbnail)" />
                
                }
            }
        </div>
        <div class="text-center">
            <form method="post">
                <input type="hidden" asp-for="Post.ID"/>
                <input type="submit" value="Delete" class="btn btn-danger"/> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
</div>