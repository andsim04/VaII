@using Microsoft.AspNetCore.Identity
@using VaII_Sem.Models
@inject SignInManager<ApplicationUser> SignInManager


<ul class="navbar-nav me-auto">
@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav m-auto">
    <li class="nav-item">
        <a class="nav-link text-dark align-bottom" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    
    
        <li class="nav-item">
        <a class="nav-link text-dark align-content-end" asp-area="" asp-page="/Posts/Index">Your Posts</a>
    </li>
    <li class="nav-item">
    <form class="form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
        <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
      </li>
    </ul>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
